extends ../template.pug   

block header 
    +header(true)

block content 
    .container-fluid.no-gutters.p-0#tabs-filter
        .row.no-gutters

            .col-12
                .in-between-screen
                    .background
                .loading-screen.d-none#animationToOffStage
                    include ../components/loading-screen/to-offstage.pug
                .loading-screen.d-none#animationToOnstage
                    include ../components/loading-screen/to-onstage.pug
                .loading-screen#offstageLoading
                    include ../components/loading-screen/loading-screen.pug

            .col-12.col-md-6
                .position-relative
                    .carousel-banner-wrapper.bg-dark
                        .carousel-banner(:id="all")
                            .banner-bg(v-for="banner in banners" :data-desktop-image='banner.ThumbnailDesktop' :data-mobile-image="banner.ThumbnailMobile" )
                                include ../components/banner-content.pug 

                            
            .col-12.col-md-6.tabfil-container
                .tab-filter.position-relative
                    .container-fluid.no-gutters.px-0
                        .row.no-gutters.filter-bar.px-3.stick
                            .col-12.col-md-11.px-2.pt-4.pb-1
                                .category-tabs-wrapper.side-filter
                                    include ../components/category-tabs.pug 
                                       
                            .col-2.d-none.d-md-block

                            .col-12 
                                hr.mx-2.mx-md-3

                            .col-11.px-2.pb-2.genre-wrapper
                                .genre-tabs-container.pb-3
                                    include ../components/genre-tabs.pug
                            
                            //-filter
                            .col-1.genre-filter.pb-2
                                 a.filter.hyperlink-custom(style="cursor:pointer;")
                                    img.filter-icon(src='/assets/microsites/offstage/img/icons/Filter_with_text.svg')
 
                        //-card
                        .row.no-gutters.px-3.px-md-4.tab-content.d-none
                            .col-12.bar-height
                            .col-12.col-md-6.card-tile.px-2(v-for="filter in filters" v-match-heights="{el:['.card-body']}")
                                include ../components/card-tile.pug
                            .col-12.py-2.mx-auto
                                .empty#emptyData
                                    p.my-5.text-center.message.d-none opps.. no result found!
                            .col-12.py-2.mx-auto
                                div#spinner.spinner-load.d-none
                                    //- img.spinner-icon(src="/assets/microsites/offstage/img/icons/Loading.svg")
                                    img.spinner-icon(src="/assets/microsites/offstage/img/gif/offstage-reverse.gif")
                                    p.spinner-message.bt-1 Yeah, it's a slow build-up - but we promise it will be worth the wait!
                                        
        .row
            include ../components/filter-menu.pug

block footer
    .container-fluid
        .row
            .col-12.p-0.sticky-footer
                include ../layout/footer.pug

               

                

                