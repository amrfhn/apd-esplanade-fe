mixin heroBanner(icon, imgSrc, video720, video450,  img720, img450)
    if video720
        //- Trigger Modal
        .video-modal-wrapper.position-relative(data-toggle="modal" data-target="#video-modal")
            .thumbnail-overlay.position-absolute.w-100.h-100.d-flex.justify-content-center.align-items-center
                img(src=icon alt="thumbnail" width="90px").video-icon.float-right.p-3
            
            .thumbnail-holder(data-desktop-image="123" data-mobile-image="312" style="background: url("+imgSrc+") no-repeat center center; background-size: cover; height: 720px")

    if video450
        //- Trigger Modal
        .video-modal-wrapper.position-relative(data-toggle="modal" data-target="#video-modal")
            .thumbnail-overlay.position-absolute.w-100.h-100.d-flex.justify-content-center.align-items-center
                img(src=icon alt="thumbnail" width="90px").video-icon.float-right.p-3
            
            .thumbnail-holder(data-desktop-image="123" data-mobile-image="312" style="background: url("+imgSrc+") no-repeat center center; background-size: cover; height: 450px") 
    
    if img720
        .thumbnail-holder-portrait(data-desktop-image="https://via.placeholder.com/310x200" data-mobile-image="312" style="background: url("+imgSrc+") no-repeat center center; background-size: cover;")
        
        
    if img450
        .thumbnail-holder-landscape.d-none.d-md-block(data-desktop-image="https://via.placeholder.com/310x200" data-mobile-image="312" style="background: url("+imgSrc+") no-repeat center center; background-size: cover;") 
        .thumbnail-holder-landscape.d-md-none
            img.potrait-image-mobile.w-100.h-100(src="https://via.placeholder.com/310x200")  