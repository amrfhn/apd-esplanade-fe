//- START: Search BAR & Filter
.col-12.pb-25
    .close#closeSearch
        img(src="./assets/microsites/offstage/img/icons/Close.svg")
    form.search-wrapper
        .form-row.mb-25
            .col-12 
                label(for="validationServer01") Search: 
                input#validationServer01.form-control(type="text" placeholder="Events, Article, Content " value="" required)

        p.show-result.m-0
            | Showing 
            span.font-weight-bold 0
            |  Results            
        
        .search-filter.mt-25.d-none.d-md-flex
            .form-check(v-for="filter in searchFilter") 
                input.form-check-input.custom-control-input(type="checkbox" :id="filter.id")
                label.form-check-label(:for="filter.id") {{filter.type}}
//- END: Search BAR & Filter


//- START: Search Suggestion
.col-12.search-suggestion.d-none
        p.font-12 Search Suggestion:
        
        ul.search-suggestion-list
            li(v-for="suggestion in searchSuggestion") {{suggestion}}
//- END: Search Suggestion


//- START: No Result
.col-12.no-result.d-none 
    p.result-header.pb-25 Oops! We are unable to provide any results…
