                a.nav-link(data-toggle="tab" role="tab" aria-controls="visualarts" aria-selected="true" id="visualarts" @click="filterGenre('visualarts')") Visual Arts
            li.genre-list
                a.nav-link(data-toggle="tab" role="tab" aria-controls="literaryarts" aria-selected="true" id="literaryarts" @click="filterGenre('literaryarts')") Literary Arts
            li.genre-list
